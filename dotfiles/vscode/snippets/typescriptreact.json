      "  return (",
      "    <div className=\"$7\">",
      "      $0",
      "    </div>",
      "  );",
      "}"
    ],
    "description": "React Component com useState"
  },

  "React useEffect": {
    "prefix": ["uef", "useeffect"],
    "body": [
      "useEffect(() => {",
      "  $1",
      "",
      "  return () => {",
      "    $2",
      "  };",
      "}, [$3]);"
    ],
    "description": "useEffect com cleanup"
  },

  "React useState": {
    "prefix": ["ust", "usestate"],
    "body": [
      "const [${1:state}, set${1/(.*)/${1:/capitalize}/}] = useState<${2:string}>($3);"
    ],
    "description": "useState hook"
  },

  "React useMemo": {
