  // ═══════════════════════════════════════════════════════════════════════════
  // DRIZZLE ORM — Database (Sistema CCA usa Drizzle)
  // ═══════════════════════════════════════════════════════════════════════════

  "Drizzle Select Query": {
    "prefix": ["dsel", "drizzleselect"],
    "body": [
      "const ${1:result} = await db",
      "  .select()",
      "  .from(${2:table})",
      "  .where(eq(${2:table}.${3:id}, ${4:value}));"
    ],
    "description": "Drizzle SELECT query"
  },

  "Drizzle Insert": {
    "prefix": ["dins", "drizzleinsert"],
    "body": [
      "const ${1:result} = await db",
      "  .insert(${2:table})",
      "  .values({",
      "    ${3:campo}: ${4:valor},",
      "  })",
      "  .returning();"
    ],
    "description": "Drizzle INSERT"
  },

  "Drizzle Update": {
    "prefix": ["dupd", "drizzleupdate"],
    "body": [
      "const ${1:result} = await db",
      "  .update(${2:table})",
      "  .set({",
      "    ${3:campo}: ${4:valor},",
      "  })",
      "  .where(eq(${2:table}.${5:id}, ${6:value}))",
      "  .returning();"
    ],
    "description": "Drizzle UPDATE"
  },

  "Drizzle Table Schema": {
    "prefix": ["dtable", "drizzletable"],
    "body": [
      "export const ${1:tableName} = pgTable('${2:table_name}', {",
      "  id: serial('id').primaryKey(),",
      "  ${3:nome}: varchar('${3:nome}', { length: 255 }).notNull(),",
      "  createdAt: timestamp('created_at').defaultNow().notNull(),",
      "  updatedAt: timestamp('updated_at').defaultNow().notNull(),",
      "});"
    ],
    "description": "Drizzle Table Schema"
  },

