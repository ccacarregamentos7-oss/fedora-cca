# Status rÃ¡pido de todos os servidores
cca-status() {
    cca-connect status
}

# Abre todos os tÃºneis SSH (ou especÃ­fico)
cca-tunnel() {
    cca-connect tunnels "${1:-all}"
}

# Fecha todos os tÃºneis
cca-tunnel-kill() {
    cca-connect kill-tunnels
}

# Docker remoto rÃ¡pido
cca-docker() {
    cca-connect docker "${1:-local}"
}

# Info da infraestrutura
cca-info() {
    cca-connect info
}

# Verifica tÃºneis ativos
cca-tunnels-check() {
    echo "ðŸ”— TÃºneis SSH ativos:"
    local found=0
    for port in 15432 18123 18006 25432 35432; do
        if ss -tlnp 2>/dev/null | grep -q ":$port "; then
            case $port in
                15432) echo "  âœ… :$port â†’ DEV PostgreSQL" ;;
                18123) echo "  âœ… :$port â†’ Home Assistant UI" ;;
                18006) echo "  âœ… :$port â†’ Proxmox Web UI" ;;
                25432) echo "  âœ… :$port â†’ PROD PostgreSQL" ;;
                35432) echo "  âœ… :$port â†’ DB-PROD PostgreSQL" ;;
            esac
            found=1
        fi
    done
    [[ $found -eq 0 ]] && echo "  Nenhum tÃºnel ativo. Use: cca-tunnel [dev|prod|all]"
}

# Abre Proxmox UI no navegador (precisa tÃºnel)
cca-proxmox-ui() {
    if ! ss -tlnp 2>/dev/null | grep -q ":18006 "; then
        echo "Abrindo tÃºnel Proxmox..."
        ssh -fN cca-proxmox 2>/dev/null
        sleep 1
    fi
    xdg-open "https://localhost:18006" 2>/dev/null
}

# Abre Home Assistant no navegador (precisa tÃºnel)
cca-ha-ui() {
    if ! ss -tlnp 2>/dev/null | grep -q ":18123 "; then
        echo "Abrindo tÃºnel Home Assistant..."
        ssh -fN cca-dev 2>/dev/null
        sleep 1
    fi
    xdg-open "http://localhost:18123" 2>/dev/null
}
